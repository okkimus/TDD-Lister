{
  "name": "lister-backend",
  "version": "0.0.1",
  "description": "Backend for shopping list app",
  "main": "./src/index.js",
  "author": "okkimus",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "yarn test --coverage",
    "test:badges": "yarn test:coverage && jest-coverage-badges",
    "prepare": "cd ../.. && husky install",
    "pre-push": "yarn test:badges && git add coverage && git commit --amend --no-edit --allow-empty"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.35",
    "@swc/jest": "^0.2.24",
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.4.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "jest-coverage-badges": "^1.1.2",
    "typescript": "^4.9.5"
  }
}